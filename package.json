{
  "name": "pbx-admin-panel",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Warden VoIP PBX Admin Panel",
  "scripts": {
    "dev": "vite admin",
    "build": "tsc --noEmit -p admin/tsconfig.json && vite build admin",
    "preview": "vite preview admin",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit -p admin/tsconfig.json",
    "lint": "tsc --noEmit -p admin/tsconfig.json"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "typescript": "^5.7.0",
    "vite": "^7.3.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/admin/tests/**/*.test.{js,ts}"
    ],
    "transform": {
      "^.+\\.(js|ts)$": [
        "@swc/jest",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript"
            },
            "target": "es2024"
          },
          "module": {
            "type": "commonjs"
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "admin/js/**/*.{js,ts}",
      "!admin/js/**/*.d.ts",
      "!admin/js/**/*.min.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "engines": {
    "node": ">=22"
  }
}
