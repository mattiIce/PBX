{
  "name": "pbx-admin-panel",
  "version": "1.0.0",
  "description": "PBX Admin Panel JavaScript Testing",
  "scripts": {
    "dev": "vite admin",
    "build": "vite build admin",
    "preview": "vite preview admin",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "vite": "^7.3.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/admin/tests/**/*.test.js"
    ],
    "transform": {},
    "collectCoverageFrom": [
      "admin/js/**/*.{js,ts}",
      "!admin/js/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
