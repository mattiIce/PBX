{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PBX: Debug Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "PBX: Run Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "PBX: Run Specific Test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "PBX: Debug Current Test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}::${selectedText}",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "PBX: Test with Coverage",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "--cov=pbx",
        "--cov-report=html",
        "--cov-report=term-missing"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
