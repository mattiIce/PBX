# PBX System Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pbx_system
DB_USER=pbx_user
DB_PASSWORD=YourSecurePassword123!

# SMTP Configuration for Voicemail
SMTP_HOST=smtp.yourserver.com
SMTP_PORT=587
SMTP_USERNAME=your-username
SMTP_PASSWORD=your-password

# Active Directory (if using LDAP integration)
# Use ldaps:// for secure connection (recommended for production)
AD_SERVER=ldaps://192.168.1.22:636
AD_BIND_DN=CN=Administrator,CN=Users,DC=albl,DC=com
AD_BIND_PASSWORD=YourActualPassword
# Example for production: Use a dedicated service account instead of Administrator
# AD_BIND_DN=CN=svc-pbx,OU=Service Accounts,DC=albl,DC=com

# Zoom Integration (if using)
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret

# Microsoft Outlook/Teams Integration (if using)
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
TEAMS_CLIENT_ID=your-teams-client-id
TEAMS_CLIENT_SECRET=your-teams-client-secret
