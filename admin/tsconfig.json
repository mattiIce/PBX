{
    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ES2024", "DOM", "DOM.Iterable"],
        "strict": true,
        "noEmit": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@api/*": ["js/api/*"],
            "@state/*": ["js/state/*"],
            "@ui/*": ["js/ui/*"],
            "@utils/*": ["js/utils/*"],
            "@pages/*": ["js/pages/*"]
        }
    },
    "include": ["js/**/*.ts", "js/**/*.js"],
    "exclude": ["node_modules", "dist"]
}
