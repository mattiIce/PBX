[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg-info,
    venv,
    env,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    logs,
    recordings,
    voicemail,
    cdr,

# Ignore specific errors
# E203: whitespace before ':' (conflicts with black)
# E501: line too long (handled by black)
# W503: line break before binary operator (conflicts with black)
# E402: module level import not at top of file (needed for env loading)
ignore = E203,E501,W503,E402

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

# Use flake8 default complexity settings (max-complexity = 10)
# Note: Cognitive complexity and annotation complexity require additional plugins
# and are not enabled by default in standard flake8
