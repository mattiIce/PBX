{
  "dashboard": {
    "title": "PBX System Overview",
    "tags": ["pbx", "voip", "telephony"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 2,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Status",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "pbx_system_info",
            "legendFormat": "Version: {{version}}"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "justifyMode": "center"
        }
      },
      {
        "id": 2,
        "title": "Active Calls",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "pbx_active_calls"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "center"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Registered Extensions",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "pbx_registered_extensions"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "title": "Average Call Quality (MOS)",
        "type": "gauge",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "avg(pbx_call_quality_mos)"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 5,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 3.5
                },
                {
                  "color": "green",
                  "value": 4.0
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Call Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "sum(rate(pbx_calls_total[5m])) by (status, direction)",
            "legendFormat": "{{direction}} - {{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 6,
        "title": "Call Duration (P95)",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(pbx_call_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 Duration"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 7,
        "title": "CPU Usage",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 10
        },
        "targets": [
          {
            "expr": "pbx_cpu_usage_percent",
            "legendFormat": "CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 70 },
                { "color": "red", "value": 90 }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 10
        },
        "targets": [
          {
            "expr": "pbx_memory_usage_bytes",
            "legendFormat": "Memory Used"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 9,
        "title": "Disk Usage",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 10
        },
        "targets": [
          {
            "expr": "pbx_disk_usage_bytes",
            "legendFormat": "{{mount_point}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 10,
        "title": "API Request Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "sum(rate(pbx_api_requests_total[5m])) by (method, status)",
            "legendFormat": "{{method}} {{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 11,
        "title": "API Latency (P95)",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(pbx_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 12,
        "title": "Packet Loss",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 22
        },
        "targets": [
          {
            "expr": "pbx_packet_loss_percent",
            "legendFormat": "{{extension}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 3 }
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Jitter",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 22
        },
        "targets": [
          {
            "expr": "pbx_jitter_milliseconds",
            "legendFormat": "{{extension}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        }
      },
      {
        "id": 14,
        "title": "Queue Wait Times",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 22
        },
        "targets": [
          {
            "expr": "pbx_queue_average_wait_seconds",
            "legendFormat": "{{queue_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 15,
        "title": "Trunk Status",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 28
        },
        "targets": [
          {
            "expr": "pbx_trunk_status",
            "legendFormat": "{{trunk_name}}"
          }
        ],
        "options": {
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" } } },
              { "type": "value", "options": { "1": { "text": "UP", "color": "green" } } }
            ]
          }
        }
      },
      {
        "id": 16,
        "title": "Error Rate",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 6,
          "y": 28
        },
        "targets": [
          {
            "expr": "sum(rate(pbx_errors_total[5m])) by (error_type)",
            "legendFormat": "{{error_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "errors/s"
          }
        }
      },
      {
        "id": 17,
        "title": "Certificate Expiry",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 28
        },
        "targets": [
          {
            "expr": "pbx_certificate_expiry_days",
            "legendFormat": "{{certificate_name}}"
          }
        ],
        "options": {
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "d",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 14 },
                { "color": "green", "value": 30 }
              ]
            }
          }
        }
      },
      {
        "id": 18,
        "title": "Authentication Attempts",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 32
        },
        "targets": [
          {
            "expr": "sum(rate(pbx_authentication_attempts_total[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 19,
        "title": "DB Connections",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 32
        },
        "targets": [
          {
            "expr": "pbx_db_connections_active",
            "legendFormat": "Active"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 20,
        "title": "Active Conferences",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 32
        },
        "targets": [
          {
            "expr": "pbx_conferences_active",
            "legendFormat": "Conferences"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      }
    ]
  }
}
